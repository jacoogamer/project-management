{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "."
  },
  "include": ["src/**/*", "./settings.ts"],
  "exclude": ["node_modules"]        // nothing else!
}